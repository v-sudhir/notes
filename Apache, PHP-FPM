'--enable-exif' \
'--enable-ftp' \
'--with-gd' \
'--with-jpeg-dir' \
'--with-png-dir' \
'--with-freetype-dir' \
'--enable-gd-native-ttf' \
'--with-kerberos' \
'--enable-mbstring' \
'--with-mcrypt' \
'--with-mhash' \
'--with-mysqli' \
'--with-openssl' \
